@{
    ViewBag.Title = "Register";
    Layout = "_AuthenticationLayout";
}
@section styles{
    <link rel="Stylesheet" href="@Href("~/css/Register.css")" />
}
<div class="col-4 shadow-lg px-5 py-3 bg-body rounded row g-3 align-self-center">
        <div class="mb-3">
            <p class="text-center h1">Register</p>
        </div>
        <div class="mb-3 row">
            <label class="col-form-label col-4" for="email">Email</label>
            <div class="col-6">    
                <input class="form-control" type="text" name="email" id="email" required/>
            </div>
            <div class="invalid-feedback">
                Email is existed
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-form-label col-4" for="password">Password</label>
            <div class="col-6"> 
                <input class="form-control" type="password" name="password" id="password" required />
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-form-label col-4" for="confirmPassword">Confirm Password</label>
            <div class="col-6">    
                <input class="form-control" type="password" name="confirmPassword" id="confirmPassword" required/>
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-form-label col-4" for="dob">Date of birth</label>
            <div class="col-5">    
                <input class="form-control w-85" type="date" name="dob" id="dob" required />
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-form-label col-4" for="fullname">Full Name</label>
            <div class="col-6">    
                <input class="form-control" type="text" name="fullname" id="fullname" required />
            </div>
        </div>
            <button class="col-4 offset-4 btn btn-danger mt-5A">Sign Up</button>

</div>
<script src="~/js/Authenticate/Register.js"></script>
