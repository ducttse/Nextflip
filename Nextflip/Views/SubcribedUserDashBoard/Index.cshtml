@{
    ViewBag.Title = "Home";
    Layout = "_UserDashboardLayout";
}
@section styles{
    <link rel="Stylesheet" href="@Href("~/css/User-Dashboard.css")" />
    <link rel="Stylesheet" href="@Href("~/css/Media-Details.css")" />
    <link rel="Stylesheet" href="@Href("~/css/Header.css")" />
}
<div id="wrapper">
</div>
<div class="modal fade" id="modalDetail" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-body" style="background-color: #000">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close">
                </button>
                <div class="wrapper row col-12 mx-auto text-light">
                <div class="row bg-dark">
                    <div id="img_holder" class="col-6">
                    </div>
                    <div class="col-6">
                        <p class="h3 lh-1 text-warning" id="detail_title"></p>
                        <div class="overflow-auto" id="detail_table">
                        </div>
                    </div>
                </div>
                <div class="row mt-3 bg-dark" style="background-color: #3b3f42">
                    <div class="d-flex flex-row mb-3">
                        <div id="description" class="options me-4 p-1 chosen" onclick="chooseOptions('description', this)">
                            <p class="p-2 h4 text-warning">
                                Description
                            </p>
                        </div>
                        <div id="season" class="options me-4 p-1" onclick="chooseOptions('season', this)">
                            <p class="p-2 h4 text-warning">
                                Season
                            </p>
                        </div>
                    </div>
                    <div id="option_detail"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/User-Dashboard.js"></script>
<script src="~/js/Search-In-Header.js"></script>
<script src="~/js/Media-Details.js"></script>
<script>
    setGoToSearchEvent();
</Script>