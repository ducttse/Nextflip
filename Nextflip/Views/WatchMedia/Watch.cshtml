@{
    Layout = "_WatchMediaLayout";
}
@section styles{
    <link href="@Url.Content("~/css/Search-Media.css")" rel="stylesheet" type="text/css" />
    <link rel="Stylesheet" href="@Href("~/css/Header.css")" />
    <link rel="Stylesheet" href="@Href("~/css/Watch-media.css")" />
}
<div id="meida_holder" class="w-100 mt-3 d-flex">
    <div class="col-1" style="width: 5%;">
    </div>
    <div class="col-7" style="width: 65%;">
        <div class="col-12" id="wrapper"></div>
    </div>
    <div class="col-3 ps-3" style="width: 25%;">
        <div>
            <p class="text-warning fs-5 mb-1">Episode List</p>
            <p id="show_seasons" class="mb-1">
                <a id="season_name" class="link-warning text-decoration-none d-flex" href="#" data-bs-toggle="collapse" data-bs-target="#collapse_seasons" aria-expanded="false">
                </a>
            </p>
            <div class="collapse position-absolute" id="collapse_seasons">
                <div class="p-0 card card-body border-0 rounded-0" id="seasons">
                </div>
            </div>
        </div>
        <div class="overflow-auto" id="episode_list" style="max-height: 80%" >
        </div>
    </div>
    <div class="col-1" style="width: 5%;">
    </div>
</div>
<div class="w-100 d-flex">
    <div style="width: 5%;">
    </div>
    <div style="width: 90%;">
        <div class="col-1" style="width: 5%;">
        </div>
        <p class="fs-5 text-warning mb-0" id="media_title"></p>
        <div class="d-flex justtify-content-start">
            <p class="fs-6 mb-0 text-secondary" id="category">Category: </p>
        </div>
        <div class="d-flex justtify-content-start">
            <p class="fs-6 text-secondary short" id="description">Description: </p>
        </div>
        <p id="btn_show" class="link-primary text-center" onclick="showMore(this)">Show more</p>
        <p id="btn_hide" class="link-primary text-center d-none" onclick="hide(this)">Show less</p>
    </div>
    <div style="width: 5%;">
    </div>
</div>
<div class="w-100 d-flex">
    <div style="width: 5%;">
    </div>
    <div style="width: 90%;">
        <p class="text-warning fs-5">More like this</p>
        <div id="media_holder">
        </div>
    </div>
    <div style="width: 5%;">
    </div>
</div>
<!-- modal -->
<div class="modal fade" id="modalDetail" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-body bg-dark">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close">
                </button>
                <div class="wrapper row col-12 mx-auto text-light">
                <div class="row bg-dark">
                    <div id="img_holder" class="col-6">
                    </div>
                    <div class="col-6">
                        <p class="h3 lh-1 text-warning" id="detail_title"></p>
                        <div class="overflow-auto" id="detail_table">
                        </div>
                    </div>
                </div>
                <div class="row bg-dark py-2 offset-1">
                    <button class="ms-3 btn btn-danger col-1 d-flex justify-content-center">
                        <i class="fas fa-play pt-1 pe-2"></i>Play
                    </button>
                    <button class="ms-2 btn btn-secondary col-2 d-flex justify-content-center" id="add_btn" onclick="addToFavourite()">
                        <i class="fas fa-heart pt-1 pe-2"></i>Add to favourite
                        </button>
                    <button class="ms-2 btn btn-secondary col-2 d-flex justify-content-center" id="remove_btn" onclick="removeFavourite()">
                        <i class="fas fa-times pt-1 pe-2"></i>Remove favourite
                    </button>
                </div>
                <div class="row mt-3 bg-dark" style="background-color: #3b3f42">
                    <div class="d-flex flex-row mb-3">
                        <div id="description" class="options me-4 p-1 chosen" onclick="chooseOptions('description', this)">
                            <p class="p-2 h4 text-warning">
                            Description
                            </p>
                        </div>
                        <div id="season" class="options me-4 p-1" onclick="chooseOptions('season', this)">
                            <p class="p-2 h4 text-warning">
                                Season
                            </p>
                        </div>
                    </div>
                    <div id="option_detail"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Media-Details.js"></script>
<script src="~/js/Watch-Media.js"></script>
<script src="~/js/Search-In-Header.js"></script>
<script src="~/js/Favourite-Media.js"></script>
<script>
    setGoToSearchEvent();
   Run('@ViewBag.MediaID', '@ViewBag.EpisodeID');
</script>