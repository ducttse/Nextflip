@{
    ViewBag.Title = "Media Editor";
    Layout = "_CustomLayout";
}
@section Styles {
    <link href="@Url.Content("~/css/User-Manager.css")" rel="stylesheet" type="text/css" />
     <link href="@Url.Content("~/css/Slide-Bar.css")" rel="stylesheet" type="text/css" />
}
<div class="col-10">
    <p class="fs-2 text-secondary ps-2">Add new media</p>
    <div>
        <div class="mb-3 row">
            <label for="title" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="title">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="category" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="category">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="filmType" class="col-sm-2 col-form-label">Film type</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="filmType">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="cast" class="col-sm-2 col-form-label">Cast</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="cast">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="publicYear" class="col-sm-2 col-form-label">Publish year</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="publicYear">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="duration" class="col-sm-2 col-form-label">Duration</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="duration">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="language" class="col-sm-2 col-form-label">Language</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="language">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="description">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="note" class="col-sm-2 col-form-label">Note</label>
            <div class="col-sm-10">
                <textarea type="text" class="form-control" id="note"></textarea>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="description" class="col-sm-2 col-form-label">Banner</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="description">
            </div>
        </div>
    </div>
</div>
<script src="~/js/Slide-Bar.js"></script>
<script src="~/js/Add-New-Media.js"></script>
<script> 
    let button1 = `<a href="/EditorDashboard/Index" class="side_bar_btn btn btn-dark text-decoration-none link-light text-start w-100" onclick="showAddStaffModal()">
                        Media manager
                      </a>`;
    let button2 = `<a href="/EditorDashboard/ViewAddNewMedia" class="side_bar_btn btn btn-dark text-decoration-none link-light text-start w-100" onclick="showAddStaffModal()">
                        Add new media
                      </a>`;
    let button3 = `<a href="/EditorDashboard/ViewEditRequest"  onclick="return showForm();" class="side_bar_btn btn btn-dark text-decoration-none link-light text-start w-100" onclick="showAddStaffModal()">
                        View edit request
                    </a>`;
    appendButton(button3);
    appendButton(button2);
    appendButton(button1);
</script>