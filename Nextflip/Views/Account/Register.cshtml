</div>
<script src="~/js/Authenticate/Register.js"></script>
<script>
    $(function () {
        $("#dob").datepicker({
            dateFormat: 'dd-mm-yy'
        });

        $("#dob_icon").click(function () {
            $("#dob").datepicker("show");
        });
    });
</script>
