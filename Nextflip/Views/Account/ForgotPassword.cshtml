@{
    ViewBag.Title = "Forgot Password";
    Layout = "_AuthenticationLayout";
}
@section styles{
    <link rel="Stylesheet" href="@Href("~/css/Login.css")" />
}
<div id="wrapper" style="background-color: #171717">
    <a class="navbar-brand fw-normal ps-5 position-absolute top-0 start-0 fs-2" style="color: red" href="#">NextFlip</a>
    <div class="d-flex justify-content-center" style="min-height: 100vh">
        <div id="confirmEmail_wrapper" class="col-5 col-xxl-4 px-5 py-3 rounded text-light align-self-center" style="background-color: #202020">
            <p class="text-center h2 mb-3">Reset your password</p>
            <div class="mb-3 row mx-auto">
                <label for="email" class="col-3 col-form-label text-end">Email</label>
                <div class="col-6">
                    <input type="text" class="form-control  bg-dark text-light border-secondary" placeholder="Your email" id="email" />
                </div>
                <a style="cursor: pointer" class="col-3 pt-2 text-start link-primary text-decoration-none" onclick="return sendCode()">Send code</a>
            </div>
            <div class="mb-3 row mx-auto">
                <label for="code" class="col-3 col-form-label text-end">Access Code</label>
                <div class="col-4">
                    <input type="text" class="form-control bg-dark text-light border-secondary" id="code" />
                </div>
            </div>
            <div class="alert alert-danger d-none" id="alert" role="alert">
                Invalid email
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-danger" onclick="verirfyCode()">Validate email</button>
            </div>
        </div>
        <div id="resetPassword_wrapper" class="d-none col-5 col-xxl-4 px-5 py-3 rounded text-light align-self-center" style="background-color: #202020">
            <p class="text-center h2 mb-3">Reset your password</p>
            <div class="mb-3 row mx-auto">
                <label for="newPassword" class="col-4 col-form-label text-end">New password</label>
                <div class="col-7">
                    <input type="password" class="form-control  bg-dark text-light border-secondary" id="newPassword" />
                </div>
            </div>
            <div class="mb-3 row mx-auto">
                <label for="confirmPassword" class="col-4 col-form-label text-end">Confirm password</label>
                <div class="col-7">
                    <input type="password" class="form-control bg-dark text-light border-secondary" id="confirmPassword" />
                </div>
            </div>
            <div class="alert alert-danger d-none" id="ResetAlert" role="alert">
                Password must match
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-danger" onclick="requestResetPassword()">Reset pasword</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Authenticate/ResetPassword.js"></script>